
#:import math math

<ClockNumber@Label>:
    text: ''
    pos_hint: {}
    color: .2,0.5,.5,.4
    font_size:'25dp'

<MinScreen>:
    face: face
    ticks: ticks
    label_data:label_data
    FloatLayout:
        id: face
        size_hint: None, None
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size: 0.9*min(root.size), 0.9*min(root.size)
        on_touch_down: root.return_screen()
        canvas:
            Color:
                rgba: 0, 0, 0,.4
            Ellipse:
                size: self.size     
                pos: self.pos
        ClockNumber:
            
            text:'1'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(1-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(1-12))}
        ClockNumber:
            text:'2'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(2-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(2-12))}
        ClockNumber:
            text:'3'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(3-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(3-12))}
        ClockNumber:
            text:'4'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(4-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(4-12))}
        ClockNumber:
            text:'5'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(5-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(5-12))}
        ClockNumber:
            text:'6'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(6-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(6-12))}
        ClockNumber:
            text:'7'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(7-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(7-12))}
        ClockNumber:
            text:'8'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(8-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(8-12))}
        ClockNumber:
            text:'9'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(9-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(9-12))}
        ClockNumber:
            text:'10'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(10-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(10-12))}
        ClockNumber:
            text:'11'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(11-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(11-12))}
        ClockNumber:
            text:'12'
            pos_hint:{"center_x": 0.5+0.42*math.sin(math.pi/6*(12-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(12-12))}
        Label:
            id:label_data
            text:root.min_data
            color: .8,0.7,1,.4
            font_size:'18dp'
            size_hint:None,None
            
            halign: 'left'
            markup: True
            shorten: True
            ellipsis_options: {'color':(1,0.5,0.5,1),'underline':True}
    Ticks:
        id: ticks
        r: min(root.size)*0.9/2
